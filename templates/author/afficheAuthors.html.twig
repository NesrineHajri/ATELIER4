<h3>List authors</h3>

<table border="1">
  <tr>
    <td>Username</td>
    <td>Email</td>
    <td>Actions</td>
  </tr>

  {% for author in response %}
    <tr>
      <td>{{ author.Username }}</td>
      <td>{{ author.Email }}</td>
      <td>
        <a href="{{ path('edit_author', {'id': author.id}) }}">edit</a>
        <a href="{{ path('delete', {'ref': author.id}) }}">delete</a>
      </td>
  {% endfor %}
</table>
